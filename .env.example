# ==================================
# 币安API配置 (Binance API Configuration)
# ==================================
# 数据查询API密钥（只读权限，用于OI监控、K线查询等）
BINANCE_API_KEY=your_binance_data_api_key_here
BINANCE_API_SECRET=your_binance_data_api_secret_here

# 交易API密钥（交易权限，用于下单、平仓等）
BINANCE_TRADE_API_KEY=your_binance_trade_api_key_here
BINANCE_TRADE_SECRET=your_binance_trade_secret_here

# 测试网API密钥（用于测试，安全无风险）
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_SECRET_KEY=your_testnet_secret_key_here

BINANCE_API_BASE_URL=https://api.binance.com/api/v3
BINANCE_WS_BASE_URL=wss://stream.binance.com:9443/ws

# ==================================
# 数据库配置 (Database Configuration)
# ==================================
# MySQL配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=trading_master

# MySQL连接池配置
MYSQL_POOL_SIZE=10

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================================
# 服务配置 (Server Configuration)
# ==================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# ==================================
# 缓存配置 (Cache Configuration)
# ==================================
CACHE_EXPIRE_HOURS=24
PRELOAD_POPULAR_SYMBOLS=true

# ==================================
# OI监控配置 (OI Monitoring Configuration)
# ==================================
# OI监控最大币种数量 (设置为 "max" 表示不限制，监控所有币安返回的合约代币)
OI_MAX_MONITORED_SYMBOLS=300

# ==================================
# Telegram 推送配置 (Telegram Notification)
# ==================================
# 是否启用 Telegram 推送
TELEGRAM_ENABLED=false
# Bot Token (从 @BotFather 获取)
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Chat ID (可以是个人ID或群组ID，使用 @userinfobot 获取)
TELEGRAM_CHAT_ID=your_chat_id_here
# 可选配置
# TELEGRAM_RATE_LIMIT_MS=100
# TELEGRAM_MAX_RETRIES=3
# TELEGRAM_RETRY_DELAY_MS=1000
# TELEGRAM_QUEUE_MAX_SIZE=100